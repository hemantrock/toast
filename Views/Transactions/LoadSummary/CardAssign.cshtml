@using TOAST.Data.Model;
@model TOAST.Data.Model.tblLoadMaster
@{
    ViewBag.Title = "Card Assign";
    Layout = null;
}
<div class="col-lg-12 col-md-12 form-container">
    <form id="FormBU" role="form" class="form-fields">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="fields form-group">
                    <label>Truck Number</label>
                    <input type="text" id="txtTruck" name="TruckNumber" maxlength="50" value="@Model.tblTruckMaster.TruckNumber" class="form-control" disabled />
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="fields form-group">
                    <label>Status</label>
                    <input type="text" id="txtStatus" name="TruckStatus" maxlength="50" value="@Model.tblTruckStatu.TruckStatusDesc" class="form-control" disabled />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="fields form-group">
                    <label>Card Reader</label>
                    <select id="ddlCardReader" name="CardReader" class="form-control" onchange="ShowGetCardButton()"></select>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <label></label>
                <div class="text-left">
                    <a id="btnGetCard" role="button" class="btn btn-primary" href="#" onclick="ReadCard();">
                        <span class="glyphicon glyphicon-check"></span>Read Card
                    </a>
                </div>
            </div>
        </div>
        @*<div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="fields form-group ui-widget">
                    <label>Card Number</label>
                    <input type="text" id="txtCard" name="CardNumber"  class="form-control" disabled  />
                </div>
            </div>
        </div>*@
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="fields form-group">
                    <label>Card Number</label>
                    <select class="form-control " id="ddlCard" name="CardNumber" disabled></select>
                </div>
            </div>
        </div>
    </form>
</div>
<script>
    Purpose = '@Model.PurposeID';
</script>
<script src="~/Scripts/PageJS/Transactions/LoadSummary/CardAssign.js"></script>