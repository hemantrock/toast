@using TOAST.Data.Model;
@using TOAST.Business;
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<style>
    .waitpage {
        display: none !important;
    }
</style>

<div class="col-lg-12">
    <div id="TruckAssigmentOptions" onclick="$('#dvTimer').timer('pause');  $('#dvTimer').timer('remove');"></div>
</div>
<div id="jqxLSgrid" class="jqx-tbl-container">
</div>

<div class="row" id="dvTruckDetails">
</div>
<div id="jqxgridSummary" class="jqx-tbl-container">
</div>

<script>
    Purpose = '1';
    WeightBased = '@clsConfig.IsWeightBased.ToString().ToLower()';
    CheckInvoiceForBGExit = '@clsConfig.CheckInvoiceForBGExit.ToString().ToLower()';
    IsBGEntryBypassed = '@((clsConfig.BGEntryLicInUse.ToUpper() == "BYPASS").ToString().ToLower())';
</script>
<script src="~/Scripts/PageJS/Transactions/LoadSummary/0394/Funcs.js"></script>
<script src="~/Scripts/PageJS/Transactions/LoadSummary/0394/Index.js"></script>
@{
    if (clsConfig.IsWeightBased)
    {
        <script>
            var path = "../Scripts/PageJS/Transactions/LoadSummary/" + '@(ViewBag.jsPath??"")' + "/TableWeight.js";
            $.getScript(path);
        </script>
    }
    else
    {
        <script src="~/Scripts/PageJS/Transactions/LoadSummary/0394/TableVolume.js"></script>
    }
}