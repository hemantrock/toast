@model int
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

@if (Model == null || (Model!=null && Model==1))
{
    <div class="row">
        <div class="col-lg-7 text-center">
            <div class="row">
                <h4>Access Denied</h4>
                <div class="large-4 columns lock-icon">&nbsp;</div>
                <div class="large-8 columns">
                    <p class="contact-admin">This URL is valid but you are not authorized for this content. Please contact your <a>administrator</a>.</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-7 text-center">
            <div class="row">
                <h4>Well...that wasn't supposed to happen !</h4>
                <div class="large-4 columns error-icon">&nbsp;</div>
                <div class="large-8 columns">
                    <p class="contact-admin">We are going to fix it up and have things back to normal soon.</p>
                    <p class="here-because">You are here because:</p>
                    <ul>
                        <li>The page has moved</li>
                        <li>The page no longer exists</li>
                    </ul>
                    <p class="return-home">
                        <b><a href="/Home/Index">Return to Homepage</a></b>
                    </p>
                </div>
            </div>
        </div>
    </div>
}