@using TOAST.Data.Model;
@model List<tblDeviceMaster>
@{
    ViewBag.Title = "Plant View - UPS View";
    Layout = null;
    tblDeviceMaster oUPS01 = Model.Where(x => x.DeviceName == "UPS-01").FirstOrDefault();
    tblDeviceMaster oUPS02 = Model.Where(x => x.DeviceName == "UPS-02").FirstOrDefault();
    if (oUPS01 == null) { oUPS01 = new tblDeviceMaster(); }
    if (oUPS02 == null) { oUPS02 = new tblDeviceMaster(); }
}
<style>
    .ups-status-container .ups-bg {
        margin-bottom: 10px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h3 class="grid-headerplant" style="color:black">Process UPS View</h3>
    </div>
</div>
<div class="row ups-status-container">
    <div class="col-lg-12 m-t-40">
        <div class="col-lg-2 no-padd-right">
            <div class="ups-bg left emerson single" style="margin-bottom: 88px;">
                <table class="detail-tbl">
                    <tbody>
                        <tr>
                            <td class="detail-tbl-lbl tooltips" title="Status of Primary Connection">Pri.</td>
                            <td>
                                <span class="circle-cont">
                                    <span class="@(oUPS01.TagPrefix +"_CONN01")"></span>
                                </span>
                            </td>

                        </tr>
                        <tr>
                            <td class="detail-tbl-lbl tooltips" title="Status of Secondary Connection">Sec.</td>
                            <td>
                                <span class="circle-cont">
                                    <span class="@(oUPS01.TagPrefix +"_CONN02")"></span>
                                </span>
                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="ups-bg right emerson single" style="margin-bottom: 88px;">
                <table class="detail-tbl">
                    <tbody>
                        <tr>

                            <td class="detail-tbl-lbl tooltips" title="Status of Primary Connection">Pri.</td>
                            <td>
                                <span class="circle-cont">
                                    <span class="@(oUPS02.TagPrefix +"_CONN01")"></span>
                                </span>
                            </td>
                        </tr>
                        <tr>

                            <td class="detail-tbl-lbl tooltips" title="Status of Secondary Connection">Sec.</td>
                            <td>
                                <span class="circle-cont">
                                    <span class="@(oUPS02.TagPrefix +"_CONN02")"></span>
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <br />
            <table class="table-striped app-tbl">
                <thead>
                    <tr><th class="text-center bg-color" colspan="3">STATUS</th></tr>
                    <tr>
                        <th class="text-center" style="width: 60%">Parameter</th>
                        <th class="text-center tooltips" style="width: 20%">UPS-01</th>
                        <th class="text-center tooltips" style="width: 20%">UPS-02</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="tooltips" title="UPS Mains OK">UPS Mains OK</td>
                        <td><span class="circle-cont-sm"><span class="UPS01_MAINS_OK"></span></span></td>
                        <td><span class="circle-cont-sm"><span class="UPS02_MAINS_OK"></span></span></td>
                    </tr>
                    <tr>
                        <td class="tooltips" title="UPS Self Test Pass">UPS Test Pass</td>
                        <td><span class="circle-cont-sm"><span class="UPS01_TEST_PASS"></span></span></td>
                        <td><span class="circle-cont-sm"><span class="UPS02_TEST_PASS"></span></span></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-3">
            <table class="table-striped app-tbl">
                <thead>
                    <tr><th class="text-center bg-color" colspan="9">ALERTS / STATUS</th></tr>
                    <tr>
                        <th class="text-center" style="width: 60%">Parameter</th>
                        <th class="text-center tooltips" style="width: 20%">UPS-01</th>
                        <th class="text-center tooltips td-b-right" style="width: 20%">UPS-02</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="">Rectifier On</td>
                        <td><span class="UPS01_RECT_ON"></span></td>
                        <td class="td-b-right"><span class="UPS02_RECT_ON"></span></td>
                    </tr>
                    <tr>
                        <td class="">Rectifier Off</td>
                        <td><span class="UPS01_RECT_OFF"></span></td>
                        <td class="td-b-right"><span class="UPS02_RECT_OFF"></span></td>
                    </tr>
                    <tr>
                        <td class="">Rectifier Warning</td>
                        <td><span class="UPS01_RECT_WARN"></span></td>
                        <td class="td-b-right"><span class="UPS02_RECT_WARN"></span></td>
                    </tr>
                    <tr>
                        <td class="">Rectifier Fail</td>
                        <td><span class="UPS01_RECT_FAIL"></span></td>
                        <td class="td-b-right"><span class="UPS02_RECT_FAIL"></span></td>
                    </tr>
                    <tr>
                        <td class="">Inverter On</td>
                        <td><span class="UPS01_INV_ON"></span></td>
                        <td class="td-b-right"><span class="UPS02_INV_ON"></span></td>
                    </tr>
                    <tr>
                        <td class="">Inverter Off</td>
                        <td><span class="UPS01_INV_OFF"></span></td>
                        <td class="td-b-right"><span class="UPS02_INV_OFF"></span></td>
                    </tr>
                    <tr>
                        <td class="">Inverter Warning</td>
                        <td><span class="UPS01_INV_WARN"></span></td>
                        <td class="td-b-right"><span class="UPS02_INV_WARN"></span></td>
                    </tr>
                    <tr>
                        <td class="">Inverter Fail</td>
                        <td><span class="UPS01_INV_FAIL"></span></td>
                        <td class="td-b-right"><span class="UPS02_INV_FAIL"></span></td>
                    </tr>
                    <tr>
                        <td class="">Bypass On</td>
                        <td><span class="UPS01_BYPASS_ON"></span></td>
                        <td class="td-b-right"><span class="UPS02_BYPASS_ON"></span></td>
                    </tr>
                    <tr>
                        <td class="">Bypass Off</td>
                        <td><span class="UPS01_BYPASS_OFF"></span></td>
                        <td class="td-b-right"><span class="UPS02_BYPASS_OFF"></span></td>
                    </tr>
                    <tr>
                        <td class="">Bypass Warning</td>
                        <td><span class="UPS01_BYPASS_WARN"></span></td>
                        <td class="td-b-right"><span class="UPS02_BYPASS_WARN"></span></td>
                    </tr>
                    <tr>
                        <td class="">Bypass Fail</td>
                        <td><span class="UPS01_BYPASS_FAIL"></span></td>
                        <td class="td-b-right"><span class="UPS02_BYPASS_FAIL"></span></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-3">
            <table class="table-striped app-tbl">
                <thead>
                    <tr><th class="text-center bg-color" colspan="12">DATA</th></tr>
                    <tr>
                        <th class="text-center" style="width: 50%">Parameter</th>
                        <th class="text-center tooltips" style="width: 25%">UPS-01</th>
                        <th class="text-center tooltips td-b-right" style="width: 25%">UPS-02</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="tooltips" title="Input Voltage RY">Input Volt RY</td>
                        <td><span class="UPS01_INP_VOLT_RY"></span></td>
                        <td class="td-b-right"><span class="UPS02_INP_VOLT_RY"></span></td>
                    </tr>
                    <tr>
                        <td class="tooltips" title="Input Current RY">Input Current RY</td>
                        <td><span class="UPS01_INP_CURR_RY"></span></td>
                        <td class="td-b-right"><span class="UPS02_INP_CURR_RY"></span></td>
                    </tr>
                    <tr>
                        <td class="tooltips" title="Input Voltage YB">Input Volt YB</td>
                        <td><span class="UPS01_INP_VOLT_YB"></span></td>
                        <td class="td-b-right"><span class="UPS02_INP_VOLT_YB"></span></td>
                    </tr>
                    <tr>
                        <td class="tooltips" title="Input Current YB">Input Current YB</td>
                        <td><span class="UPS01_INP_CURR_YB"></span></td>
                        <td class="td-b-right"><span class="UPS02_INP_CURR_YB"></span></td>
                    </tr>
                    <tr>
                        <td class="tooltips" title="Input Voltage BR">Input Volt BR</td>
                        <td><span class="UPS01_INP_VOLT_BR"></span></td>
                        <td class="td-b-right"><span class="UPS02_INP_VOLT_BR"></span></td>
                    </tr>
                    <tr>
                        <td class="tooltips" title="Input Current BR">Input Current BR</td>
                        <td><span class="UPS01_INP_CURR_BR"></span></td>
                        <td class="td-b-right"><span class="UPS02_INP_CURR_BR"></span></td>
                    </tr>
                    <tr>
                        <td class="tooltips" title="Battery Voltage">Battery Voltage</td>
                        <td><span class="UPS01_BATTERY_VOLT"></span></td>
                        <td class="td-b-right"><span class="UPS02_BATTERY_VOLT"></span></td>
                    </tr>
                    <tr>
                        <td class="Battery Current" title="Battery Current">Battery Current</td>
                        <td><span class="UPS01_BATTERY_CURR"></span></td>
                        <td class="td-b-right"><span class="UPS02_BATTERY_CURR"></span></td>
                    </tr>
                    <tr>
                        <td class="Battery Status" title="Battery Status">Battery Charging</td>
                        <td><span class="circle-cont"><span class="UPS01_BATTERY_STATUS"></span></span></td>
                        <td class="td-b-right"><span class="circle-cont"><span class="UPS02_BATTERY_STATUS"></span></span></td>
                    </tr>
                    <tr>
                        <td class="tooltips" title="UPS Output Load%">UPS Output Load%</td>
                        <td><span class="UPS01_OUT_LOAD_PERCENT"></span></td>
                        <td class="td-b-right"><span class="UPS02_OUT_LOAD_PERCENT"></span></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-6 hide">
            <div class="row text-center" style="background-color: #6e6d6b;color: #fff;font-size: 17px; margin-bottom:5px">UPS-01 SLD</div>
            <div class="row text-center" style="background-color: #6e6d6b;color: #fff;font-size: 17px; margin-bottom:5px">UPS-02 SLD</div>
        </div>
    </div>
</div>

<script src="~/Scripts/PageJS/PlantView/UPSView/Index.js"></script>
