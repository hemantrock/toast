@using TOAST.Data.Model;
@model List<tblNetwork>
@{
    ViewBag.Title = "Plant View - Ethernet Status View";
    Layout = null;
    int iTotal = Model.Count();
    List<tblNetwork> lstPri = Model.ToList();
    int iCnt = 0;
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="grid-headerplant" style="color:black">Ethernet Status View</h3>

    </div>
</div>

<div class="row">
    <div class="col-lg-6 content-top-spacing">
        <div class="ethernet-container col-lg-12">
            <table class="detail-tbl datatable table-striped" id="tblEthernet1">
                <thead>
                    <tr>
                        <th>Device Name</th>
                        <th>Primary</th>
                        <th>Secondary</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        for (iCnt = 0; iCnt < iTotal/2; iCnt++)
                        {
                            tblNetwork link = lstPri[iCnt];
                            <tr>
                                <td class="padd-l-15">@link.DeviceName</td>
                                <td class="ethernet-icon-container">
                                    <div class="ETH1_@link.OPCTag tooltips" title="@link.PrimaryIP"></div>
                                </td>
                                <td class="ethernet-icon-container">
                                    <div class="ETH2_@link.OPCTag tooltips" title="@link.SecondaryIP"></div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-6 content-top-spacing">
        <div class="ethernet-container col-lg-12">
            <table class="detail-tbl datatable table-striped" id="tblEthernet2">
                <thead>
                    <tr>
                        <th>Device Name</th>
                        <th>Primary</th>
                        <th>Secondary</th>
                    </tr>
                </thead>
                <tbody>
                    @{

                        for (int iC = iCnt; iC < iTotal; iC++)
                        {
                            tblNetwork link = lstPri[iC];
                            <tr>
                                <td class="padd-l-15">@link.DeviceName</td>
                                <td class="ethernet-icon-container">
                                    <div class="ETH1_@link.OPCTag tooltips" title="@link.PrimaryIP"></div>
                                </td>
                                <td class="ethernet-icon-container">
                                    <div class="ETH2_@link.OPCTag tooltips" title="@link.SecondaryIP"></div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tblEthernet1').dataTable({
            "iDisplayLength": 10,
            "bLengthChange": false,
            "bFilter": false,
            "bPaginate": true,
            "bInfo": true,
            "bSort": false,
            "aoColumns":
                [
                    { sWidth: "82%", "sClass": "text-left" },
                    { sWidth: "9%", "sClass": "text-center" },
                    { sWidth: "9%", "sClass": "text-center"  },
                ],
            "bAutoWidth": false,
        });
        $('#tblEthernet2').dataTable({
            "iDisplayLength": 10,
            "bLengthChange": false,
            "bFilter": false,
            "bPaginate": true,
            "bInfo": true,
            "bSort": false,
            "aoColumns":
                [
                    { sWidth: "82%", "sClass": "text-left" },
                    { sWidth: "9%", "sClass": "text-center" },
                    { sWidth: "9%", "sClass": "text-center" },
                ],
            "bAutoWidth": false,
        });
    });
</script>
<script src="~/Scripts/PageJS/PlantView/EthernetView/Index.js"></script>

<script>
    createTooltip();
</script>