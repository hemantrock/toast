@using TOAST.Data.Model;
@model List<tblNetwork>
@{
    ViewBag.Title = "Plant View - Ethernet Status View";
    Layout = null;
    int iTotal = Model.Count();
    List<tblNetwork> lstPri = Model.ToList();
    int iCnt = 0;
}

<div class="col-xs-12">

    <div class="row">
        <h2>ETHERNET STATUS VIEW</h2>
    </div>

    <div class="ethernet-view-container">
        <div class="toggle-menu-container">
            <div class="menu-item">
                PRIMARY  <i class="fa fa-plus-circle"></i>
            </div>
            <div class="menu-content">
                <table class="tblesdStatus table table-bordered table-striped dataTable">
                    <tbody>
                        @{
                            for (iCnt = 0; iCnt < iTotal; iCnt++)
                            {
                                tblNetwork link = lstPri[iCnt];
                                <tr>
                                    <td class="lbl">@link.DeviceName</td>
                                    <td class="val ETH1_@link.OPCTag tooltips" title="@link.PrimaryIP">

                                        <span class="circle-cont">
                                            <span class="ETH1_@link.OPCTag"></span>
                                        </span>

                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
            <div class="menu-item">SECONDARY <i class="fa fa-plus-circle"></i></div>
            <div class="menu-content">
                <table class="tblesdPowerCutOff table table-bordered table-striped dataTable">
                    <tbody>
                        @{
                            for (iCnt = 0; iCnt < iTotal / 2; iCnt++)
                            {
                                tblNetwork link = lstPri[iCnt];
                                <tr>
                                    <td class="lbl">@link.DeviceName</td>
                                    <td class="val ETH2_@link.OPCTag tooltips" title="@link.SecondaryIP">
                                        <span class="circle-cont">
                                            <span class="ETH2_@link.OPCTag"></span>
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

