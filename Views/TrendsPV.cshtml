@using TOAST.Data.Model;
@using TOAST.Data.ViewModels;
@model arrTagTrendsLogData
@{
    Layout = null;
    List<string> arrTags = ViewBag.arrTags;
}

<div class="col-lg-12">
    <h3 class="grid-header">TRENDS DETAILS</h3>
    <table class="table">
        <thead>
            <tr>
                <th>DATE TIME</th>
                @foreach (string colName in arrTags)
                {
                    <th>@colName</th>
                }
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.TimeStamp.Length; i++)
                {
                    <tr>
                        <td>@Model.TS[i]</td>
                        @for (int k = 0; k < arrTags.Count(); k++)
                        {
                            <td>@(Model.arrTagValue[k][i])</td>
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
</div>