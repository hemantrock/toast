@using TOAST.Data.Model;
@model List<TOAST.Data.Model.tblTankStatu>

@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12 text-right">
        <a id="createButton" role="button" class="btn btn-primary" href="#" onclick="OpenAddTankStatus();">
            <span class="glyphicon glyphicon-plus"></span>CREATE NEW TANK STATUS
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h3 class="grid-header">Tank Status</h3>
        <table id="tblTankStatus" class="table">
            <thead>
                <tr>
                    <th style="display:none;">StatusID</th>
                    <th>STATUS</th>
                    <th>SHORT NAME</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (tblTankStatu itm in Model)
                {
                    <tr class="clickable" onclick="EditRecord(@itm.StatusID);">
                        <td style="display:none;">@itm.StatusID</td>
                        <td>@itm.StatusDesc</td>
                        <td>@itm.StatusShortLetter</td>
                        <td class="text-center"><span id="spanDelete_@itm.StatusID" class="glyphicon glyphicon-remove clickable spanDelete" data-id="@itm.StatusID"></span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/Scripts/PageJS/Masters/TankStatus/Index.js"></script>
