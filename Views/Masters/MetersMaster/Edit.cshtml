@using TOAST.Data.Model;
@model TOAST.Data.Model.tblMeterMaster
@{
    ViewBag.Title = "Edit Meters Master";
    Layout = null;
    var loadingPoint = ViewBag.loadingPoint;
    List<tblProduct> lstProd = ViewBag.Products;
}

<h2 class="headingPage">
    Edit Meters Master
</h2>
<div class="row">
    <div class="col-lg-12 col-md-12 form-container">
        <form id="FormBU" role="form" class="form-fields">

            <div class="col-lg-2 col-md-2 col-sm-2">
                <div class="fields form-group">
                    <label>LP No.</label>
                    <input type="text"class="form-control" id="txtLPNo" name="LPNo" value="@Model.LPNo" placeholder="LP No" disabled />
                </div>
            </div>

            <div class="col-lg-2 col-md-2 col-sm-2">
                <div class="fields form-group">
                    <label>Meter No.</label>
                    <input type="text" class="form-control" id="txtMeterCompNo" name="MeterCompNo" value="@Model.MeterCompNo" placeholder="LPs Meter#/Component#" disabled />
                </div>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2">
                <div class="fields form-group">
                    <label>PRODUCT</label>
                    <select class="form-control" id="ddlProduct" name="Product">
                        <option value="0" selected="selected">Please Select Product</option>
                        @foreach (tblProduct prod in lstProd)
                        {
                            if (prod.ProductID == Model.BaseProductID)
                            {
                                <option value="@prod.ProductID" selected>@prod.ProductName</option>
                            }
                            else
                            {
                                <option value="@prod.ProductID">@prod.ProductName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2">
                <div class="fields form-group">
                    <label>Meter Desc</label>
                    <input type="text" class="form-control" id="txtMeterDesc" name="MeterDesc" value="@Model.MeterDesc" placeholder="Meter Description"/>
                </div>
            </div>

            <div class="col-lg-2 col-md-2 col-sm-2">
                <div class="fields form-group">
                    <label>Bck Factor PC</label>
                    <input type="text" class="form-control" id="txtBckFactorPC" name="BckFactorPC" value="@Model.BCKFactorPC" placeholder="Batch Controller K Factor Program Code" />
                </div>
            </div>

            @*<div class="col-lg-2 col-md-2 col-sm-2">
                <div class="fields form-group">
                    <label>Loop No.</label>
                    <input type="text" class="form-control" id="txtLoopNo" name="LoopNo" value="@Model.LoopNo" placeholder="Loop No" />
                </div>
            </div>*@

            <div class="col-lg-2 col-md-2 col-sm-2">
                <div class="fields form-group">
                    <label>Slave ID</label>
                    <input type="text" class="form-control" id="txtSlaveID" name="SlaveID" value="@Model.SlaveID" placeholder="Slave ID" />
                </div>
            </div>

            <div class="col-lg-2 col-md-2 col-sm-2 checkbox-field">
                <div class="input-group">
                    <span class="input-group-addon">
                        @if (Model.Enabled == true)
                        {
                            <input id="chkEnable" name="Enable" type="checkbox" checked="checked" class="form-control">
                        }
                        else
                        {
                            <input id="chkEnable" name="Enable" type="checkbox" class="form-control">
                        }
                    </span>
                    <input type="text" class="form-control" value="Enabled" disabled>
                </div>
            </div> 
            <div class="col-lg-2 col-md-2 col-sm-2 checkbox-field">
                <div class="input-group">
                    <span class="input-group-addon">
                        @if (Model.ErroneousDensity == true)
                        {
                            <input id="chkErroneousDensity" name="ErroneousDensity" type="checkbox" checked="checked" class="form-control">
                        }
                        else
                        {
                            <input id="chkErroneousDensity" name="ErroneousDensity" type="checkbox" class="form-control">
                        }
                    </span>
                    <input type="text" class="form-control" value="Erroneous Density" disabled>
                </div>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2 checkbox-field">
                <div class="input-group">
                    <span class="input-group-addon">
                        @if (Model.ErroneousRTD == true)
                        {
                            <input id="chkErroneousRTD" name="ErroneousRTD" type="checkbox" checked="checked" class="form-control">
                        }
                        else
                        {
                            <input id="chkErroneousRTD" name="ErroneousRTD" type="checkbox" class="form-control">
                        }
                    </span>
                    <input type="text" class="form-control" value="Erroneous RTD" disabled>
                </div>
            </div> 
        </form>
    </div>
</div>
<div class="row button-bar">
    <div class="col-lg-12">
        <a id="saveButton" role="button" class="btn btn-primary" href="#" onclick="UpdateMeterMaster();"><span class="glyphicon glyphicon-floppy-saved"></span>UPDATE</a>
        <a id="cancelButton" role="button" class="btn btn-primary" href="#" data-toggle="modal" data-target="#cancelModal"><span class="glyphicon glyphicon-remove"></span>CANCEL</a>
    </div>
</div>
<script src="~/Scripts/PageJS/Masters/MetersMaster/MetersMaster.js"></script>

