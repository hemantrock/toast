@using TOAST.Data.Model;
@model TOAST.Data.Model.tblTransporter
@{
    ViewBag.Title = "Edit Transporter";
    Layout = null;
}

<h2 class="headingPage">
    Edit Transporter
</h2>
<div class="row">
    <div class="col-lg-12 col-md-12 form-container">
        <form id="FormBU" role="form" class="form-fields">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <input id="hdnUniqueID" type="hidden" value="@Model.UniqueID">
                </div>
             </div>
            <div class="col-lg-4 col-md-4 col-sm-4 form-container">
                <div class="fields form-group">
                    <label>Transporter Code</label>
                    <input id="txtTransporterCode" name="TransporterCode" type="text" placeholder="Transporter Name" class="form-control" value="@Model.TransporterCode">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6  form-container">
                        <div class="fields form-group">
                            <label>Transporter Name</label>
                            <input id="txtTransporterName" name="TransporterName" type="text" placeholder="Transporter Name" class="form-control" value="@Model.TransporterDesc">
                        </div>
                </div>
            </div>
        </form>
        
    </div>
</div>
<div class="row button-bar">
    <div class="col-lg-12">
        <a id="saveButton" role="button" class="btn btn-primary" href="#" onclick="UpdateTransporter();"><span class="glyphicon glyphicon-floppy-saved"></span>UPDATE</a>
        <a id="cancelButton" role="button" class="btn btn-primary" href="#" data-toggle="modal" data-target="#cancelModal"><span class="glyphicon glyphicon-remove"></span>CANCEL</a>
    </div>
</div>
<script src="~/Scripts/PageJS/Masters/Transporter/Transporter.js"></script>
