@using TOAST.Data.Model;
@model List<TOAST.Data.Model.tblSMSReceiver>
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<div class="row">
    <div class="col-lg-12 text-right">
        <a id="createButton" role="button" class="btn btn-primary" href="#" onclick="OpenAddReceiver();">
            <span class="glyphicon glyphicon-plus"></span>CREATE NEW RECEIVER
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h3 class="grid-header" style="color:black">SMS Receivers Master</h3>
        <table id="tblReceivers" class="table">
            <thead>
                <tr>
                    <th style="display:none;">Id</th>
                    <th>Receiver Name</th>
                    <th>Mobile Number</th>
                    <th class="text-center">Enabled</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (tblSMSReceiver itm in Model)
                {
                    <tr class="clickable" onclick="EditRecord(@itm.UniqueID);">
                        <td style="display:none;">@itm.UniqueID</td>
                        <td>@itm.Name</td>
                        <td>@itm.MobileNo</td>
                        <td class="text-center">
                           @(itm.Enabled==true?"YES":"NO")
                        </td>
                        <td class="text-center">
                            <span id="spanDelete_@itm.UniqueID" class="glyphicon glyphicon-remove clickable spanDelete" data-id="@itm.UniqueID"></span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/Scripts/PageJS/Masters/SMSReceiver/Index.js"></script>