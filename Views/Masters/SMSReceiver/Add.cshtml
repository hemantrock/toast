@{
    ViewBag.Title = "Add Receiver";
    Layout = null;
}
<h2 class="headingPage">
    Create a new Receiver
</h2>
<div class="row">
    <div class="col-lg-12 col-md-12 form-container">
        <form id="frmReceiver" role="form" class="form-fields">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 ">
                    <div class="fields form-group">
                        <label>Receiver Name</label>
                        <input type="text" class="form-control" placeholder="ReceiverName" id="txtReceiverName" name="ReceiverName" />
                    </div>
                </div>

                <div class="col-lg-3 col-md-3 col-sm-3 ">
                    <div class="fields form-group">
                        <label>Mobile Number</label>
                        <input type="text" class="form-control" placeholder="MobileNo (10 digit)" id="txtMobileNo" name="MobileNo" />
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 checkbox-field">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <input id="chkIsEnabled" name="IsEnabled" type="checkbox" class="form-control">
                        </span>
                        <input type="text" class="form-control" value="Enabled" disabled>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row button-bar">
    <div class="col-lg-12">
        <a id="saveButton" role="button" class="btn btn-primary" href="#" onclick="SaveReceiver();"><span class="glyphicon glyphicon-floppy-disk"></span>SAVE</a>
        <a id="cancelButton" role="button" class="btn btn-primary" href="#" data-toggle="modal" data-target="#cancelModal"><span class="glyphicon glyphicon-remove"></span>CANCEL</a>
    </div>
</div>
<script src="~/Scripts/PageJS/Masters/SMSReceiver/Receiver.js"></script>