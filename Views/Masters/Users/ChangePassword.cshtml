@using TOAST.Data.Model;
@model TOAST.Data.Model.tblUser
@{
    ViewBag.Title = "Change Password";
    Layout = null;
}
<div class="container">
    <div class="col-lg-8 col-md-12 col-lg-push-2">
        <h2 class="headingPage">
            Change Password
        </h2>

    </div>
    <div class="col-lg-8 col-md-12 form-container col-lg-push-2">
        <form id="FormBU" role="form" class="form-fields">
            <input id="hdnIdKey" type="hidden" value="@Model.UserID">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="fields form-group">
                        <label>User Name</label>
                        <input type="text" name="UserName" id="txtUserName" value="@Model.UserName" class="form-control" disabled>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="fields form-group">
                        <label>Login Id</label>
                        <input type="text" name="UserID" id="txtUserID" value="@Model.LoginID" class="form-control" disabled>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <fieldset>
                        <legend>
                            <span class="checkbox">
                                <label>
                                    <input type="checkbox" id="chLogin" />Change Login Password
                                </label>
                            </span>

                        </legend>
                            <div class="fields form-group">
                                <label>Enter Current Login Password</label>
                                <input id="txtCurrentLoginPassword" name="CurrentLoginPassword" type="password" placeholder="Current Login Password" class="form-control">
                            </div>
                            <div class="fields form-group">
                                <label>New Login Password</label>
                                <input id="txtNewLoginPassword" name="NewLoginPassword" type="password" placeholder="Enter New Login Password" class="form-control">
                            </div>
                            <div class="fields form-group">
                                <label>Confirm New Login Password</label>
                                <input id="txtConfirmNewLoginPassword" name="ConfirmNewLoginPassword" type="password" placeholder="Confirm New Login Password" class="form-control">
                            </div>

                    </fieldset>

                </div>
                <div class="col-lg-6">
                    <fieldset>
                        <legend>
                            <span class="checkbox">
                                <label>
                                    <input type="checkbox" id="chTxn" />Change Txn Password
                                </label>
                            </span>
                        </legend>
                            <div class="fields form-group">
                                <label>Enter Current Txn Password</label>
                                <input id="txtCurrentTxnPassword" name="CurrentTxnPassword" type="password" placeholder="Current Txn Password" class="form-control">
                            </div>
                            <div class="fields form-group">
                                <label>New Txn Password</label>
                                <input id="txtNewTxnPassword" name="NewTxnPassword" type="password" placeholder="Enter New Txn Password" class="form-control">
                            </div>
                            <div class="fields form-group">
                                <label>Confirm New Txn Password</label>
                                <input id="txtConfirmNewTxnPassword" name="ConfirmNewTxnPassword" type="password" placeholder="Confirm New Txn Password" class="form-control">
                            </div>
                    </fieldset>
                </div>
            </div>





        </form>
            <div>
                <a id="saveButton" role="button" class="btn btn-primary" href="#" onclick="UpdatePassword();"><span class="glyphicon glyphicon-floppy-saved"></span>UPDATE</a>
                <a id="cancelButton" role="button" class="btn btn-primary" href="#" data-toggle="modal" data-target="#cancelModal"><span class="glyphicon glyphicon-remove"></span>CANCEL</a>
            </div>
    </div>
    
</div>


<script src="~/Scripts/PageJS/Masters/Users/Users.js"></script>