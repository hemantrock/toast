@using TOAST.Data.Model;
@model List<tblLoadingPointMaster>
@{
    ViewBag.Title = "Mixed Product Priority";
    Layout = null;
    List<int> lstBays = new List<int>();
}

<div class="col-lg-6">
    <h3 class="grid-header">Mixed Product Priority</h3>
    <table id="tblMixedPriority" class="table">
        <thead>
            <tr>
                <th>Bay No</th>
                <th>Base Product</th>
                <th>Move Up</th>
                <th>Mixed Product Priority</th>
                <th>Move Down</th>
            </tr>
        </thead>
        <tbody>
            @foreach (tblLoadingPointMaster itm in Model)
            {
                if (lstBays.IndexOf(itm.BayID??0) < 0)
                {
                    lstBays.Add(itm.BayID ?? 0);
                    <tr class="clickable">
                        <td>@itm.BayID</td>
                        <td class="baseProduct"></td>
                        <td><span class="glyphicon glyphicon-arrow-up spanUp"></span></td>
                        <td class="priority">@itm.MixedProdPriority</td>
                        <td><span class="glyphicon glyphicon-arrow-down spanDown"></span></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div class="row button-bar">
    <div class="col-lg-12">
        <a id="saveButton" role="button" class="btn btn-primary" href="#" onclick="UpdateBayMixedProdPriority();"><span class="glyphicon glyphicon-floppy-saved"></span>UPDATE</a>
        <a id="cancelButton" role="button" class="btn btn-primary" href="#" data-toggle="modal" data-target="#cancelModal"><span class="glyphicon glyphicon-remove"></span>CANCEL</a>
    </div>
</div>
<script src="~/Scripts/PageJS/Masters/BayPriority/MixedProdPriority.js"></script>