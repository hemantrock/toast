@using TOAST.Data.Model;
@model TOAST.Data.Model.tblSAPTASConfig
@{
    ViewBag.Title = "Edit  SAP Configuration Master";
    Layout = null;
}

<h2 class="headingPage">
    Edit SAP Configuration
</h2>
<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-6">
        <input id="hdnIdKey" type="hidden" value="@Model.RecordNo">
    </div>
    <div class="col-lg-12 col-md-12 form-container">
        <form id="FormBU" role="form" class="form-fields">
            <div class="row">

                <div class="col-lg-3 col-md-3 col-sm-3">
                <div class="fields form-group">
                    <label>RECORD NO.</label>
                    <input id="txtRecordNo" name="RecordNo"  value="@Model.RecordNo" type="text" placeholder="Record No" class="form-control" disabled onblur="MakeConnectionString()">
                </div>
            </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="fields form-group">
                        <label>USER NAME</label>
                        <input id="txtUsername" name="Username" value="@Model.Username" type="text" placeholder="User Name" class="form-control" onblur="MakeConnectionString()">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="fields form-group">
                        <label>PASSWORD</label>
                        <input id="txtPassword" name="Password" value="@Model.Password" type="password" placeholder="Password" class="form-control" onblur="MakeConnectionString()">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="fields form-group">
                        <label>Next Opening Dip Post Time</label>
                        <input id="dtpOpenDipTime" name="OpenDipTime" value="@(Model.OpenDipPostTime!=null? Model.OpenDipPostTime.Value.ToString("HH:mm"):"")" type="text" placeholder="Open Dip Post Date Time" class="form-control" onblur="MakeConnectionString()">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="fields form-group">
                        <label>Next Closing Dip Post Time</label>
                        <input id="dtpCloseDipTime" name="CloseDipTime" value="@(Model.CloseDipPostTime!=null? Model.CloseDipPostTime.Value.ToString("HH:mm"):"")" type="text" placeholder="Close Dip Post Date Time" class="form-control" onblur="MakeConnectionString()">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="fields form-group">
                        <label>Base Address</label>
                        <input id="txtBaseAddress" name="BaseAddress" value="@Model.BaseAddress" type="text" placeholder="Base Address" class="form-control" onblur="MakeConnectionString()">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="fields form-group">
                        <label>PLANT CODE</label>
                        <input id="txtPlantCode" name="PlantCode" value="@Model.sPlantCode" type="text" placeholder="Plant Code" class="form-control" onblur="MakeConnectionString()">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="fields form-group">
                        <label>SEC PLANTCODE-01</label>
                        <input id="txtSecPlantCode01" name="SecPlantCode01" value="@Model.SecPlantCode01" type="text" placeholder="Sec Plant Code-01" class="form-control">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="fields form-group">
                        <label>SEC PLANTCODE-02</label>
                        <input id="txtSecPlantCode02" name="SecPlantCode02" value="@Model.SecPlantCode02" type="text" placeholder="Sec Plant Code-02" class="form-control">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="fields form-group">
                        <label>TAS Code</label>
                        <input id="txtTASCode" name="TASCode" value="@Model.TASCode" type="text" placeholder="TAS Code" class="form-control">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">Upload Certificate file</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="CertPath" title="@Path.GetFileName(Model.CertPath)"
                                   value="@Path.GetFileName(Model.CertPath)" aria-describedby="inputGroupFileAddon01">
                            <label class="custom-file-label" for="inputGroupFile01"></label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 checkbox-field">
                    <div class="input input-group">
                        <span class="input-group-addon">
                            <input id="chkAutoPostingEnabled" name="AutoPostingEnabled" @(Model.AutoDipPostEnabled==true?"checked":"") type="checkbox" class="form-control">
                        </span>
                        <input type="text" class="form-control" value="Auto Posting Enabled" disabled>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row button-bar">
    <div class="col-lg-12">
        <a id="saveButton" role="button" class="btn btn-primary" href="#" onclick="UpdateIconSapConfiguration();"><span class="glyphicon glyphicon-floppy-saved"></span>UPDATE</a>
        <a id="cancelButton" role="button" class="btn btn-primary" href="#" data-toggle="modal" data-target="#cancelModal"><span class="glyphicon glyphicon-remove"></span>CANCEL</a>
    </div>
</div>
<script src="~/Scripts/PageJS/Masters/IconSAPConfig/IconSAPConfig.js"></script>
