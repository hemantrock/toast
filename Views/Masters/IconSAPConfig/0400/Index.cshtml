@using TOAST.Data.Model;
@model List<TOAST.Data.Model.tblSAPTASConfig>
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<div class="row">
    <div class="hide col-lg-12 text-right">
         <a id="createButton" role="button" class="btn btn-primary" href="#" onclick="OpenAddIconSAPConfig();">
            <span class="glyphicon glyphicon-plus"></span>CREATE NEW SAP CONFIGURATION MASTER
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h3 class="grid-header" style="color:black">SAP Configuration Master</h3>
        <table id="tblIconSAPConfig" class="table">
            <thead>
                <tr>
                    <th style="display:none;">ID</th>
                    <th>Client Name</th>  
                    <th>Username</th>
                    <th>Password</th>
                    <th>Destination</th>
                    <th>Next Open Dip</th>
                    <th>Next Close Dip</th>
                    <th>Auto Post</th>
                    <th>Base Address</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (tblSAPTASConfig itm in Model)
                {
                    <tr class="clickable" onclick="EditRecord(@itm.sPlantCode);">
                        <td style="display:none;">@itm.RecordNo</td>
                        <td>@itm.ClientName</td>
                        <td>@itm.Username</td>
                        <td>*******</td>
                        <td>@itm.Destination</td>
                        <td>@(itm.OpenDipPostTime!=null? itm.OpenDipPostTime.Value.ToString("dd-MMM-yyyy HH:mm"):"")</td>
                        <td>@(itm.CloseDipPostTime!=null?itm.CloseDipPostTime.Value.ToString("dd-MMM-yyyy HH:mm"):"")</td>
                        <td>@itm.AutoDipPostEnabled</td>
                        <td>@itm.BaseAddress</td>
                        <td class="text-center"><span id="spanDelete_@itm.sPlantCode" class="glyphicon glyphicon-remove clickable spanDelete" data-id="@itm.sPlantCode"></span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

  </div>   
<script src="~/Scripts/PageJS/Masters/IconSAPConfig/Index.js"></script>
