@using TOAST.Data.Model;
@model List<TOAST.Data.Model.tblUserRoleMaster>

@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="grid-header">Define Permissions for User Roles</h3>
        <table id="tblDesignations" class="table">
            <thead>
                <tr>
                    <th style="display:none;">UserRoleID</th>
                    <th>User Role</th>
                    <th class="text-center">Manage Menu Permissions</th>
                    <th class="text-center">Manage Activity Permissions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (tblUserRoleMaster itm in Model)
                {
                    <tr>
                        <td style="display:none;">@itm.UserRoleID</td>
                        <td>@itm.UserRoleDesc</td>
                        <td class="clickable text-center"><span id="spanMenu_@itm.UserRoleID" class="glyphicon glyphicon-list clickable spanMenu" data-id="@itm.UserRoleID"></span></td>
                        <td class="clickable text-center"><span id="spanActivity_@itm.UserRoleID" class="glyphicon glyphicon-edit clickable spanActivity" data-id="@itm.UserRoleID"></span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/Scripts/PageJS/Masters/ActivityPermissions/Index.js"></script>